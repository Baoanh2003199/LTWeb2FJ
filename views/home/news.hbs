{{!-- TITLE tự bỏ vào --}}
{{#section 'title'}}{{news.name}}{{/section}}
{{#section 'css'}}
<link type="text/css" rel="stylesheet" href="magicscroll.css" />
<script type="text/javascript" src="magicscroll.js"></script>
{{/section}}

{{!-- START MAIN --}}
<div class="container pt-5 min-vh-100">
    <div class="newsCategory float-left ml-4 mt-2">
        <div><a href="/category/name={{news.name}}/id={{news.id}}">{{news.catName}}</a></div>
    </div>
    <h2 class="newsTitle py-5">{{news.name}}</h2>
    <div class="d-flex justify-content-center">
        <img src="/public/uploads/{{news.thumbnail}}" alt="main image">
    </div>

    <div class="float-left ml-5">
        <div> Ngày đăng: 12/02/2020</div>

        <div>tag:
            {{#each news.tag}}
            <a href="/tag?id={{id}}"><span class="badge badge-success">{{name}}</span></a>
            {{/each}}
        </div>
    </div>
    <div class="clearFloat"></div>
    <div class="newsContent p-2 pt-3">
        {{{news.content}}}
    </div>
    <div>
        <a href="/download/{{news.id}}" download="{{news.filePdf}}">Download</a>
    </div>
</div>

<div class="container py-4">
  <div class="row">
        <div class="panel panel-default widget">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-comment"></span>
                <h3 class="panel-title">Bình luận</h3>
                <span class="label label-info"></span>
            </div>
            <div class="panel-body">
                <ul class="list-group" id="list_comment">
                {{#each listComment}}
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-xs-2 col-md-1">
                                <img src="/public/avatar/{{avatar}}" class="img-circle img-responsive w-75" alt="" /></div>
                            <div class="col-xs-10 col-md-11">
                                <div>
                                    <div class="mic-info">
                                        By: <a href="#">{{user_name}}</a>
                                    </div>
                                </div>
                                <div class="comment-text">
                                    {{content}}
                                </div>
                            
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
                {{#if isLoggedIn}}
                <form action="" class="w-75 m-auto"  method="POST">
                    <div class="form-group">
                      <label for=""></label>
                      <textarea class="form-control" name="content" id="content" rows="3"></textarea>
                      <input type="hidden" name="newsId" id="newsId" value="{{news.id}}">
                    </div>
                    <div class="d-flex justify-content-center">
                    <a  id="enterComment"  class="btn btn-success px-3">OK</a>
                    </div>

                </form>
                {{else}}
                    Vui lòng đăng nhập để bình luận
                {{/if}}
            </div>
        </div>
    </div>
</div>

{{!-- END MAIN --}}