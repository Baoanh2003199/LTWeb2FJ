{{!-- TITLE tự bỏ vào --}}
{{#section 'title'}}Trang chủ{{/section}}
{{#section 'css'}}
<link type="text/css" rel="stylesheet" href="magicscroll.css" />
<script type="text/javascript" src="magicscroll.js"></script>
{{/section}}

{{!-- START MAIN --}}
<div class="container d-flex justify-content-center pt-2">
  <div id="carouselId" class="carousel slide w-75" data-ride="carousel">

    <ol class="carousel-indicators">
      <li data-target="#carouselId" data-slide-to="0" class="active"></li>
      <li data-target="#carouselId" data-slide-to="1"></li>
      <li data-target="#carouselId" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <img src="images/maxresdefault.jpg" class="w-100 h-"
          alt="First
          slide">
      </div>
      <div class="carousel-item">
        <img src="images/maxresdefault-2.jpg" class="w-100"
          alt="Second
          slide">
      </div>
      <div class="carousel-item">
        <img src="images/maxresdefault-3.jpg" class="w-100"
          alt="Third
          slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselId" role="button"
      data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselId" role="button"
      data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div class="container py-4 justify-content-center">
  <div class="headerBar">Mới nhất</div> <br>
  <div id="multi-item-example" class="carousel slide carousel-multi-item"
    data-ride="carousel">

    <!--Indicators-->
    <ol class="carousel-indicators">
      <li data-target="#multi-item-example" data-slide-to="0"
        class="active"></li>
      <li data-target="#multi-item-example" data-slide-to="1"></li>
      <li data-target="#multi-item-example" data-slide-to="2"></li>
    </ol>
    <!--/.Indicators-->

    <!--Slides-->
    <div class="carousel-inner" role="listbox">

      <!--First slide-->
      <div class="carousel-item active">
        {{#each listNew}}
        <div class="row">
          <div class="col-md-4">
            <div class="card mb-2">
              <a href="/{{name}}">
                <img class="card-img-top"
                  src="uploads/{{thumbnail}}"
                  alt="Card image cap">
              </a>
              <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <small>ngày đăng: {{openTime}}</small>
                <div class="card-text">{{description}}</div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        <a class="carousel-control-prev newsControlPrev"
          href="#multi-item-example" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next newsControlNext"
          href="#multi-item-example" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="container py-4">
        <div class="headerBar">Mới nhất theo chuyên mục</div>
        <div class="row d-flex justify-content-left">
          {{#each resultCat}}
          <div class="col-sm-6 py-2">
            <div class="card text-left">
              <div class="card-body">

                <h4 class="card-title pb-3">{{name}}</h4>
                <div class="itemNews py-2">
                  {{#each listVewCat}}
                  <div class="row">
                    <div class="col-sm-5">
                      <a href="/{{name}}">
                        <img
                          src="uploads/{{thumbnail}}"
                          class="w-100 m-auto" alt="">
                      </a>
                    </div>
                    <div class="col-sm-7">
                      <h5 class="card-title"> <a href="">{{name}}</a></h5>
                      <small>ngày đăng: {{createdBy}}</small>
                      <div class="card-text">{{description}}</div>
                    </div>
                  </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

      <div class="container py-4">
        <div class="headerBar">Xem nhiết nhất</div>
        <div class="row d-flex justify-content-left">
          {{#each resultCat}}
          <div class="col-sm-6 py-2">
            <div class="card text-left">
              <div class="card-body">
                <h4 class="card-title pb-3">{{name}}</h4>
                <div class="itemNews py-2">
                  {{#each manyNew}}
                  <div class="row">
                    <div class="col-sm-5">
                      <a href="/{{name}}">
                        <img
                          src="uploads/{{thumbnail}}"
                          class="w-100 m-auto" alt="">
                      </a>
                    </div>
                    <div class="col-sm-7">

                      <h5 class="card-title"> <a href="">{{name}}</a></h5>
                      <small>ngày đăng: {{openTime}}</small>
                      <div class="card-text">{{description}}</div>
                    </div>
                  </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{!-- END MAIN --}}