{{#section 'title'}}Sửa Bài viết{{/section}}
<nav class="breadcrumb">
    <a class="breadcrumb-item" href="/admin">Trang chủ</a>
    <a class="breadcrumb-item" href="/admin/news">Bài viết</a>
    <a class="breadcrumb-item active" href="#">Sửa</a>
</nav>
<div class="contentHeader">
    <div class="card text-dark bg-light">
        <div class="card-body text-center">
            <h4 class="card-title">Sửa thể loại</h4>
        </div>
    </div>
</div>

<div class="contentHeader my-4">
    <div class="card text-dark bg-light">
        <div class="card-body">
            <form action="" method="POST">
                <div class="form-group">
                    <label for="">Tên bài viết</label>
                    <input type="text"
                        class="form-control form-control-sm" name="name"
                        required
                        value="{{this.news.name}}">
                </div>
                <div class="form-group">
                    <label for="">Thể loại</label>
                    <select class="form-control" name="catID" id="">
                        {{#each this.cat}}
                        <option name="catID" value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Loại</label>
                    <select class="form-control" name="isPremium" id="">
                        <option value="0">Thường</option>
                        <option value="1">Cao cấp</option>
                    </select>
                </div>
                <div class="qtagselect from-group">
                    <label for="">Tag</label><br>
                    <select class="qtagselect__select from-control w-100"
                        multiple name="tagID">
                        {{#each this.tag}}
                        <option name="tagID" value="{{id}}" class="isblue">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="">Mo ta</label>
                    <input type="text"
                        class="form-control form-control-sm" name="description"
                        required
                        placeholder="mo ta bai viet">
                </div>
                <br>
                <div class="form-group">
                    <label for="">Ảnh đại diện</label>
                    <input type="file" class="form-control-file"
                        name="thumbnail"
                        value="{{this.news.thumbnail}}"
                        id="fileInput" onchange="showMyImage(this)"
                        placeholder="" aria-describedby="fileHelpId">
                </div>
                <div class="form-group">
                    <img src="/public/uploads/{{this.newa.thumbnail}}"
                        class="select_img
                        w-25 h-25"
                        id="thumbnail" alt="ảnh đại diện" id="thumbnail">
                </div>
                <div class="form-group">
                    <label for="">Nội dung</label>
                    <textarea name="" value="{{this.news.content}}" id="content"
                        cols="30"
                        rows="10"></textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success px-5">Sửa</button>
                </div>

            </form>
        </div>
    </div>
</div>
{{#section 'css'}}
<link rel="stylesheet" href="/tagSelector/jquery.tagselect.css" type="text/css">
{{/section}}

{{#section 'js'}}
<script src="/tagSelector/jquery.tagselect.js"></script>
<script src="/admin/myJs.js"></script>
<script>

    CKEDITOR.replace( 'content' );
    $(function(){
        $('.qtagselect__select').tagselect({
            'maxTag':10
        });
    });
</script>


{{/section}}